        "s = 0\n",
        "a = 0\n",
        "\n",
        "for i in range(1000):\n",
        "    t = random.randint(1, 2)\n",
        "    if t == 1 :\n",
        "      s += 1\n",
        "    elif t == 2 :\n",
        "      a += 1\n",
        "\n",
        "print(\"La probabilidad de que caer SOL es =\", s/10, \"% y de caer Aguila es de =\", a/10, \"%.\")"
